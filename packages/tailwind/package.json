{
  "name": "@textcss/tailwind",
  "type": "module",
  "version": "0.1.4",
  "private": false,
  "description": "Tailwind CSS integration for TextCSS",
  "author": "TextCSS Team",
  "license": "MIT",
  "keywords": [
    "textcss",
    "tailwind",
    "css",
    "styling"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "tsc -w",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@textcss/core": "workspace:*",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.2",
    "unbuild": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
